{
  "dashboard": {
    "id": null,
    "title": "Verinode - Application Metrics",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "tags": ["application", "performance", "verinode"],
    "panels": [
      {
        "type": "stat",
        "id": 1,
        "title": "Current Requests/sec",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "type": "stat",
        "id": 2,
        "title": "95th Percentile Response Time",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "Response Time (s)"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "type": "stat",
        "id": 3,
        "title": "Error Rate",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "type": "stat",
        "id": 4,
        "title": "Active Connections",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "http_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "type": "timeseries",
        "id": 5,
        "title": "HTTP Requests Rate",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Total Requests"
          },
          {
            "expr": "rate(http_requests_total{method=\"GET\"}[5m])",
            "legendFormat": "GET Requests"
          },
          {
            "expr": "rate(http_requests_total{method=\"POST\"}[5m])",
            "legendFormat": "POST Requests"
          }
        ]
      },
      {
        "type": "timeseries",
        "id": 6,
        "title": "Response Time Distribution",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th Percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th Percentile"
          }
        ]
      },
      {
        "type": "timeseries",
        "id": 7,
        "title": "HTTP Status Codes",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"2..\"}[5m])",
            "legendFormat": "2xx Success"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Errors"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Errors"
          }
        ]
      },
      {
        "type": "timeseries",
        "id": 8,
        "title": "Request Handlers Performance",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) by (handler)",
            "legendFormat": "{{handler}}"
          }
        ]
      },
      {
        "type": "stat",
        "id": 9,
        "title": "Proof Operations",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(proof_issuance_total[5m])",
            "legendFormat": "Proofs Issued/sec"
          },
          {
            "expr": "rate(proof_verification_total[5m])",
            "legendFormat": "Proofs Verified/sec"
          }
        ]
      },
      {
        "type": "stat",
        "id": 10,
        "title": "Verification Success Rate",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 20},
        "targets": [
          {
            "expr": "(rate(proof_verification_success_total[5m]) / rate(proof_verification_total[5m])) * 100",
            "legendFormat": "Success Rate %"
          }
        ]
      },
      {
        "type": "stat",
        "id": 11,
        "title": "Active Users",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 20},
        "targets": [
          {
            "expr": "active_users_count",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "type": "timeseries",
        "id": 12,
        "title": "Proof Operations Timeline",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(proof_issuance_total[5m])",
            "legendFormat": "Proofs Issued"
          },
          {
            "expr": "rate(proof_verification_total[5m])",
            "legendFormat": "Proofs Verified"
          },
          {
            "expr": "rate(proof_verification_failures_total[5m])",
            "legendFormat": "Verification Failures"
          }
        ]
      }
    ]
  }
}